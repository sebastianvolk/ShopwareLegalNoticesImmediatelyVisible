{% sw_extends '@Storefront/storefront/layout/footer/footer.html.twig' %}

{% block layout_footer_navigation_columns %}
    {{ parent() }}
    <script>
    const openCollapsedFooter = function() {
        if (typeof shopwareLegalNoticesImmediatelyVisible !== "undefined"){
            shopwareLegalNoticesImmediatelyVisible.openCollapsedFooter("{{ shopware.config.ShopwareLegalNoticesImmediatelyVisible.config.footerLinkLabel }}");
        } else {
            setTimeout(openCollapsedFooter, 250);
        }
    }();
    </script>
{% endblock %}
